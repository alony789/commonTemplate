{
    "name": "ganwei-vite-cli",
    "private": true,
    "version": "0.0.1",
    "type": "module",
    "scripts": {
        "dev": "pnpm -r --parallel --filter=ganwei-iotcenter-* run dev",
        "build": "pnpm --filter \"ganwei-iotcenter-*\" build",
        "download": "node ./configuration/gitClone.js",
        "cleanAll": "node ./configuration/cleanNodeModule.js",
        "updateModule": "node ./configuration/postInstall.cjs && node ./configuration/copyFile.js",
        "postinstall": "pnpm updateModule",
        "start": "pnpm updateModule && pnpm install && pnpm dev"
    },
    "repository": {
        "type": "git",
        "url": "https://gitee.com/shend/ganwei-app.git"
    },
    "pnpm": {
        "packageExtensions": {
            "vue-template-compiler": {
                "peerDependencies": {
                    "vue": "2.6.14"
                }
            }
        }
    },
    "optionalDependencies": {
        "gw-base-api-plus": "6.1",
        "gw-base-components-plus": "6.1",
        "gw-base-style-plus": "6.1",
        "gw-base-utils-plus": "6.1",
        "gw-module-version": "^1.0.1"
    },
    "dependencies": {
        "prompts": "^2.4.2"
    }
}
